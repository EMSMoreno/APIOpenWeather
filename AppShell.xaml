<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="APIOpenWeather.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:APIOpenWeather"
    xmlns:pages="clr-namespace:APIOpenWeather.Pages"
    Shell.FlyoutBehavior="Flyout"
    Title="APIOpenWeather">

    <TabBar>
        <ShellContent
            Title="Home"
            Icon="home.png"
            ContentTemplate="{DataTemplate local:MainPage}" />

        <ShellContent
            Title="Countries Info"
            Icon="world.png"
            ContentTemplate="{DataTemplate pages:InfoPage}" />

        <ShellContent
            Title="About App"
            Icon="about.png"
            ContentTemplate="{DataTemplate pages:AboutPage}" />

        <ShellContent
            Title="About API"
            Icon="api.jpg"
            ContentTemplate="{DataTemplate pages:AboutApi}" />    

        <ShellContent
            Title="FAQ"
            Icon="faq.png"
            ContentTemplate="{DataTemplate pages:FaqPage}" />

        <ShellContent
            Title="Profile"
            Icon="user1.png"
            ContentTemplate="{DataTemplate pages:ProfilePage}" />
    </TabBar>

</Shell>
